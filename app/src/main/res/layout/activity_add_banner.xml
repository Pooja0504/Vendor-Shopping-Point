<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.AddBannerActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen160dp"
            android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen160dp"
            android:background="@drawable/custom_back" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/dimen20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/dimen10dp"
                android:text="Be the face of application!"
                android:textColor="#ffff"
                android:textSize="18sp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginBottom="@dimen/dimen20dp"
                android:elevation="@dimen/dimen10dp"
                tool:cardCornerRadius="@dimen/dimen20dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="582dp"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen10dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:gravity="center"
                            android:paddingStart="@dimen/dimen24dp"
                            android:paddingEnd="@dimen/dimen24dp"
                            android:text="Add Banner"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/dimen30sp"
                            android:textStyle="bold" />




                        <Button
                            android:id="@+id/btnSelectBanner"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="select image"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imageOfBanner"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen150dp"
                            android:layout_gravity="center"
                            android:contentDescription="Image Of Product"
                            tools:src="@drawable/slide2" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/upload_banner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen10dp"
                                android:layout_marginTop="@dimen/dimen70dp"
                                android:layout_marginRight="@dimen/dimen10dp"
                                android:layout_marginBottom="@dimen/dimen10dp"
                                android:background="@drawable/custom_button_border2"
                                android:text="@string/upload_to_server"

                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen18sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</layout>
