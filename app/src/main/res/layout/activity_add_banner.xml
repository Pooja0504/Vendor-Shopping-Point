<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.PromotionActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen24dp"
            android:paddingEnd="@dimen/dimen24dp"
            android:layout_marginTop="@dimen/dimen20dp"
            android:gravity="center"
            android:text="Add Banner"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_margin="@dimen/dimen10dp"
            android:text="@string/enter_the_email_address_associated_with_your_account"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen18sp"
            />








        <Button
            android:id="@+id/btnSelectBanner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="select image"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageOfBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Image Of Product"
            tools:src="@drawable/slide2" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/upload_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen100dp"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen10dp"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:background="@drawable/custom_button_border2"
            android:text="@string/upload_to_server"

            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/dimen18sp"
            />
</RelativeLayout>
    </LinearLayout>
</ScrollView>
</layout>